{
	"name": "civitas-backend",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "npm run migrate && npm run gen-schemas && ts-node-dev -r tsconfig-paths/register --poll src/app.ts",
		"build": "rimraf ./dist && tsc && tsc-alias -p tsconfig.json && npm run copy-assets",
		"copy-assets": "ncp ./src/assets ./dist/assets",
		"test": "jest",
		"gen-fake-profiles": "ts-node-dev -r tsconfig-paths/register src/user/api/test/generate-fake-profiles.ts",
		"migrate": "ts-node-dev -r tsconfig-paths/register src/database/migrations/migration-runner.ts",
		"migrate:up": "npm run migrate",
		"migrate:down": "npm run migrate -- --down",
		"migrate:to": "npm run migrate -- --to $1",
		"gen-schemas": "npx kysely-codegen --dialect postgres --out-file src/database/schemas/schema.d.ts",
		"start": "npm run build && npm run migrate && node dist/app.js",
		"format": "prettier --plugin-search-dir . --write .",
		"blow": "docker compose down --remove-orphans --volumes && docker compose up -d && pnpm dev"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.421.0",
		"@react-email/button": "^0.0.10",
		"@react-email/components": "^0.0.7",
		"@react-email/html": "^0.0.4",
		"@react-email/render": "^0.0.7",
		"@sendgrid/mail": "^7.7.0",
		"ajv": "^8.12.0",
		"ajv-formats": "^2.1.1",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-validator": "^7.0.1",
		"handlebars": "^4.7.8",
		"kysely": "^0.26.3",
		"mongoose": "^7.4.5",
		"multer": "1.4.5-lts.1",
		"nanoid": "3.3.6",
		"pg": "^8.11.3",
		"react": "^18.2.0",
		"require-json5": "^1.3.0",
		"slugify": "^1.6.6",
		"supertokens-node": "^15.1.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.5",
		"@types/multer": "^1.4.8",
		"@types/node": "^20.5.6",
		"@types/pg": "^8.10.2",
		"eslint": "^8.47.0",
		"jest": "^29.7.0",
		"jest-date-mock": "^1.0.8",
		"kysely-codegen": "^0.10.1",
		"ncp": "^2.0.0",
		"prettier": "^3.0.2",
		"rimraf": "^5.0.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.7",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.2.2"
	}
}
